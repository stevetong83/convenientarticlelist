<h2>Contact Us</h2>
<p>
  <%=	 form_for @message do |f| %>
      <%=	 render "layouts/error_messages", :target => @message %>
    <div id="devise">
      <p>
        <%=	 f.label :name %><br />
        <%=	 f.text_field :name %>
      </p>
      <p>
        <%=	 f.label :email %><br />
        <%=	 f.text_field :email %>
      </p>
    </div>
    <div id="site_description">
      <p>
        <%=	 f.label :content, "Issue" %><br />
        <%=	 f.text_area :content, :rows => 6 %>
      </p>
    </div>
    <div id="submit_button">
    <p>
      <%=	 f.submit "Send Message" %>
    </p>
    </div>
<%	 end %>
</p>
